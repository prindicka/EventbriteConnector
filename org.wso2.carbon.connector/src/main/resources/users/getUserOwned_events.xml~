
<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://ws.apache.org/ns/synapse" name="getUserOwned_eventDetails">
    <parameter name="userId"/>
    <parameter name="status" description="status of the event" />
    <parameter name="order_by" description="order of the events" />



    <sequence>

        <property name="parameters" value="0"/>
    <property name="uri.var.userId" expression="$func:userId" />
    <property name="uri.var.status" expression="$func:status" />
    <property name="uri.var.order_by" expression="$func:order_by" />
    <filter
                xpath="get-property('uri.var.status') = '' or  not(string(get-property('uri.var.status')))" >
            <then>
                <property name="uri.var.status" value=""/>
            </then>
            <else>
                <property name="parameters" expression="fn:concat(get-property('parameters'),
                '&amp;status=', get-property('uri.var.status'))"/>
            </else>
        </filter>

        <filter
                xpath="get-property('uri.var.order_by') = '' or  not(string(get-property('uri.var.order_by')))" >
            <then>
                <property name="uri.var.order_by" value=""/>
            </then>
            <else>
                <property name="parameters" expression="fn:concat(get-property('parameters'),
                '&amp;order_by=', get-property('uri.var.order_by'))"/>
            </else>
        </filter>






        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.eventbrite.apiUrl}/v3/users/{uri.var.userId}/owned_events/?{uri.var.parameters}&amp;token={uri.var.eventbrite.accessToken}" />

            </endpoint>
        </call>

    </sequence>
</template>